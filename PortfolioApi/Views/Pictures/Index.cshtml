@model IEnumerable<PortfolioApi.Models.Picture>

@{
    ViewData["Title"] = "Index";
    Layout = "PictureController";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.picture)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.picture)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.picture_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.picture_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.picture_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
